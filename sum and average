#include <stdio.h>

int main()
{   
    int num, n;
    float sum = 0;
    float avg;
    
    printf("Please Enter term of n number:-");
    scanf("%d", &n);
    for(int i = 1; i <= n; i++)
    {
        printf("Number %d = ", i);
        scanf("%d", &num);
        sum = sum + num;
    }
    avg=  sum/n;
    printf("\nThe Sum of n Numbers     = %f", sum); 
    printf("\nThe Average of n Numbers = %f", avg);
}
