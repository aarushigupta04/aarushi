#include <stdio.h>
int main() {
int a,b,c;
printf("enter three integers:");
scanf("%d,%d,%d",&a,&b,&c);
if(a>b)
{
    if(a>c)
    printf("a is greatest",a);
    else
    printf("c is greatest",c);
}
else
{
    if (b>c)
    printf("b is greatest",b);
    else
    printf("c is greatest",c);
}
return 0;
}
